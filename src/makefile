# ---------------------------------------------------------------------------- #
#                              Ray Tracer Makefile                             #
# ---------------------------------------------------------------------------- #

# ----------------------------------- Defs ----------------------------------- #
CC = g++
CFLAGS = -g -Wall --std=c++20
TARGET = tests
SRC = Tuples/Tuples.cpp tests.cpp

# ----------------------------------- Build ---------------------------------- #

all: $(TARGET)

$(TARGET): $(SRC)
	$(CC) $(CFLAGS) -o $(TARGET) $(SRC)

# -------------------------------- Clean Build ------------------------------- #
clean:
	$(RM) $(TARGET)